#!/bin/sh
ipfw -f flush

# NAT
ipfw add 100 divert natd all from any to any via em0

# Loopback
ipfw add 200 allow all from any to any via lo0

# Internal LAN
ipfw add 300 allow all from 192.168.1.0/24 to any via em1
ipfw add 310 allow all from any to 192.168.1.0/24 via em1

# DNS
ipfw add 400 allow udp from any to any 53
ipfw add 410 allow tcp from any to any 53

# ICMP
ipfw add 500 allow icmp from any to any

# Log other traffic (optional for debug)
ipfw add 600 deny log all from any to any
